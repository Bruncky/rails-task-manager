<%= form_for @task do |form| %>
    <div class="form-group">
        <label for="task-title">Task Title</label>
        <%= form.text_field :title, id: "task-title", class: "form-control" %>
        <small class="form-text text-muted">Put your task's title here</small>
    </div>
    <div class="form-group">
        <label for="task-details">Task Details</label>
        <small class="form-text text-muted">Put your task details here</small>
        <%= form.text_area :details, id: "task-details", class: "form-control", rows: "3" %>
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="task-completed">
        <%= form.check_box :completed, id: "task-completed", class: "form-check-input" %>
        <label class="form-check-label" for="task-completed">Completed?</label>
    </div>
    <a class="btn btn-danger" href="http://localhost:3000/tasks" role="button">Back to Task List</a>
    <%= form.submit "Add Task", class: "btn btn-success" %>
<% end %>
