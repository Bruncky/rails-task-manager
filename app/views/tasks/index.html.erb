
<div class="container">
    <h1>My Tasks</h1>
    <ul>
        <% @tasks.each do |task| %>
            <% if task.completed == true %>
                    <li><input type="checkbox" checked><%= link_to task.title, task_path(task) %></li>
            <% else %>
                    <li><input type="checkbox"><%= link_to task.title, task_path(task) %></li>
            <% end %>
        <% end %>
    </ul>
    <a class="btn btn-primary" href="http://localhost:3000/tasks/new" role="button">Create New Task</a>
</div>
