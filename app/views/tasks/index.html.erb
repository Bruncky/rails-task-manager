<h1>My Tasks</h1>
<ul>
    <% @tasks.each do |task| %>
        <% if task.completed == true %>
                <li><input type="checkbox" checked><%= link_to "#{task.title}", tasks_path(@task.id) %></li>
        <% else %>
                <li><input type="checkbox"><%= task.title %></li>
        <% end %>
    <% end %>
</ul>
